:80 {
	root * /app
	file_server
	header / {
		-Server
		Cache-Control "no-cache, no-store, must-revalidate"
		Access-Controll-Allow-Origin "*"
	}

	@backend {
		path /*
		not path /dashboard* /ingestion
	}

	reverse_proxy @backend http://canids-v2-backend:6060 {
		health_uri /status
		health_interval 10s
	}

	reverse_proxy /ingestion http://canids-v2-backend:50000
}